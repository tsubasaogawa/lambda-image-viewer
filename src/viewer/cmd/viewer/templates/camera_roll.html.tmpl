<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8">
    <title>Camera Roll</title>
    <link href="https://fonts.googleapis.com/css?family=Open+Sans" rel="stylesheet">
    <style media="screen">
    <!--
      body {
        margin: 0;
        padding: 0;
        font-family: 'Open Sans', sans-serif;
      }
      li {
        display: inline-block;
      }
      .thumbnail {
        position: relative;
      }
      .thumbnail button {
        position: absolute;
        right: 0;
        top: 0;
      }
    -->
    </style>
  </head>
  <body>
    {{ $origin := .OriginDomain }}
    {{ $viewer := .ViewerDomain }}
    {{ $width := .ImgWidthToClipboard }}
    {{ $height := .ImgHeightToClipboard }}
    {{ $lk := .LastKey }}
    <ul>
      {{ range $i, $thumb := .Thumbnails }}
        <li>
          <div class="thumbnail">
            <a href="https://{{ $viewer }}/image/{{ $thumb.Id }}"><img src="https://{{ $origin }}/thumbnail/{{ $thumb.Id }}" width="133" height="133" /></a>
            <button id="copybtn{{ $i }}" onclick='copy("{{ $thumb.Id }}", {{ $width }}, {{ $height }}, {{ $i }})'>ðŸ“‹</button>
          </div>
        </li>
      {{ end }}
    </ul>
    <p>
      {{ if ne $lk "" }}
        <a href="/cameraroll/{{ $lk }}">Next</a>
      {{ end }}
    </p>
    <p id="private_mode">
      <input type="checkbox" id="privateModeCheckbox"> Switch to private mode
    </p>
    <p id="copyinfo">
      Copy the HTML tag to clipboard by clicking the ðŸ“‹ button.
    </p>
    <script>
      function copy(key, w, h, id) {
        const tag = `<img class="load-exif" src="https://{{ $origin }}/${key}" width="${w}" height="${h}" loading="lazy">`;
        navigator.clipboard.writeText(tag);
        let btn = document.getElementById("copybtn" + id);
        btn.innerText = "âœ…";
      }

      const privateModeCheckbox = document.getElementById('privateModeCheckbox');
      privateModeCheckbox.addEventListener('change', function() {
        const currentUrl = new URL(window.location.href);
        // Remove all existing query parameters
        currentUrl.search = '';
        if (this.checked) {
          currentUrl.searchParams.set('private', 'true');
        }
        window.location.href = currentUrl.toString();
      });

      // Check the checkbox if 'private=true' is already in the URL
      const urlParams = new URLSearchParams(window.location.search);
      if (urlParams.has('private') && urlParams.get('private') === 'true') {
        privateModeCheckbox.checked = true;
      }
    </script>
  </body>
</html>
