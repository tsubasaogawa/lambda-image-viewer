<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8">
    <title>Camera Roll</title>
    <link href="https://fonts.googleapis.com/css?family=Open+Sans" rel="stylesheet">
    <style media="screen">
    <!--
      body {
        margin: 0;
        padding: 0;
        font-family: 'Open Sans', sans-serif;
      }
      li {
        display: inline-block;
      }
      .thumbnail {
        position: relative;
      }
      .thumbnail button {
        position: absolute;
        right: 0;
        top: 0;
      }
    -->
    </style>
  </head>
  <body>
    {{ $origin := .OriginDomain }}
    {{ $width := .ImgWidthToClipboard }}
    {{ $height := .ImgHeightToClipboard }}
    {{ $lk := .LastKey }}
    <ul>
      {{ range $i, $thumb := .Thumbnails }}
        <li>
          <div class="thumbnail">
            <a href="https://{{ $origin }}/{{ $thumb.Id }}"><img src="https://{{ $origin }}/thumbnail/{{ $thumb.Id }}" width="133" height="133" /></a>
            <button id="copybtn{{ $i }}" onclick='copy("{{ $thumb.Id }}", {{ $width }}, {{ $height }}, {{ $i }})'>ðŸ“‹</button>
          </div>
        </li>
      {{ end }}
    </ul>
    <p>
      {{ if ne $lk "" }}
        <a href="/cameraroll/{{ $lk }}">Next</a>
      {{ end }}
    </p>
    <script>
      function copy(key, w, h, id) {
        const tag = `<img class="load-exif" src="https://{{ $origin }}/${key}" width="${w}" height="${h}" loading="lazy">`;
        navigator.clipboard.writeText(tag);
        let btn = document.getElementById("copybtn" + id);
        btn.innerText = "âœ…";
      }
    </script>
  </body>
</html>
